<configurator>
  <domain name="CHIP" />

  <struct name="MulticastGroupStruct" isFabricScoped="true">
    <cluster code="0x0064"/>
    <item fieldId="1" name="GroupId" type="group_id"/>
    <item fieldId="2" name="Endpoints" type="endpoint_no" array="true"/>
  </struct>

  <cluster>
    <domain>General</domain>
    <name>Multicast</name>
    <code>0x0064</code>
    <define>MULTICAST_CLUSTER</define>
    <description>The Multicast Cluster.</description>

    <features>
      <feature bit="0" code="CS" name="CacheAndSync" summary="The ability to support CacheAndSync security policy and MCSP.">
        <optionalConform/>
      </feature>
    </features>

    <attribute side="server" code="0x0000" name="Groups" define="MULTICAST_TARGETS" type="array" length="254" entryType="MulticastGroupStruct" writable="true" optional="false">
      <access op="read" privilege="view"/>
      <access op="write" privilege="manage"/>
      <mandatoryConform/>
    </attribute>
    
    <command source="client" code="0x00" name="SetGroup" isFabricScoped="true" optional="false" cli="zcl Multicast AddGroup">
      <description>Set a multicast target.</description>
      <arg name="GroupId" type="group_id"/>
      <arg name="Endpoints" type="endpoint_no" array="true"/>
      <arg name="Key" type="octet_string" length="16"/>
      <arg name="GracePeriod" type="int32u"/>
      <access op="invoke" privilege="administer"/>
      <mandatoryConform/>
    </command>

    <command source="client" code="0x01" name="RemoveGroup" isFabricScoped="true" optional="false" cli="zcl Multicast RemoveGroup">
      <description>Set a multicast target.</description>
      <arg name="GroupId" type="group_id"/>
      <arg name="Endpoints" type="endpoint_no" array="true"/>
      <arg name="GracePeriod" type="int32u"/>
      <access op="invoke" privilege="administer"/>
      <mandatoryConform/>
    </command>

  </cluster>
</configurator>
