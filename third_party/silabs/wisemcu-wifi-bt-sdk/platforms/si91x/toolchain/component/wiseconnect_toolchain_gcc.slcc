id: wiseconnect_toolchain_gcc
label: GCC Toolchain
package: platform
description: Toolchain support for GCC
category: Platform|si91x|Toolchain
quality: alpha
root_path: platforms/si91x/toolchain
provides:
  - name: wiseconnect_toolchain_gcc
template_file:
  - path: linkerfile.ld.jinja
    unless: 
    - si91x_soc
  - path: linkerfile_SoC.ld.jinja
    condition:
    - si91x_soc
requires:
  - name: wiseconnect_toolchain_variant
  - name: wiseconnect_toolchain_variant_arm
library:
  - system: gcc
  - system: c
  - system: m
  - system: nosys
toolchain_settings:
  - option: linkerfile
    unless:
    - si91x_soc
    value: autogen/linkerfile.ld
  - option: linkerfile
    condition:
    - si91x_soc
    value: autogen/linkerfile_SoC.ld
