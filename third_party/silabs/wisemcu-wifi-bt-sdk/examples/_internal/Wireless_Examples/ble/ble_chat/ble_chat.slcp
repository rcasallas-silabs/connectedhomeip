project_name: ble_chat
package: wiseconnect
quality: alpha
label: BLE Chat
category: Example|WiSeConnect
description: >
  Demonstrates how to configure GATT server in BLE peripheral mode and explains how to do read and write operations with GATT server from connected remote device using GATT client.
filter:
  - name: "Wireless Technology"
    value: ["Bluetooth"]
  - name: "Device Type"
    value: Undefined
  - name: "Project Difficulty"
    value: ["Advanced"]
xml_filter: Undefined
sdk: {id: gecko_sdk, version: 4.1.0}
sdk_extension:
  - id: wiseconnect
    version: 1.0.1
source:
  - path: rsi_ble_simple_chat.c
include:
  - path: 
    file_list:
      - path: rsi_ble_config.h
requires:
  - name: wiseconnect_platform
  - name: wiseconnect_sapi_ble
  - name: wiseconnect_sapi_bluetooth
toolchain_settings: []
readme:
  - path: readme.md
other_file:
  - path: resources/readme/image25.png
  - path: resources/readme/blechatsoc.png
  - path: resources/readme/blechatncp.png
  - path: resources/readme/image24.png
ui_hints:
  highlight:
    - path: readme.md
      focus: true
