project_name: wlan_station_ble_bridge
package: wiseconnect
quality: alpha
label: Wi-Fi + BLE  Bridge
category: Example|WiSeConnect
description: >
  Demonstrates how to build a Wi-Fi-BLE bridge
filter:
  - name: "Wireless Technology"
    value: ["Wi-Fi+BLE"]
  - name: "Device Type"
    value: Undefined
  - name: "Project Difficulty"
    value: ["Advanced"]
xml_filter: Undefined
sdk: {id: gecko_sdk, version: 4.1.0}
sdk_extension:
  - id: wiseconnect
    version: 1.0.0
